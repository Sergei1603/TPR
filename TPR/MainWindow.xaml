<Window x:Class="TPR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid Height="100" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Количество стратегий:</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Padding="1"></TextBox>
                <Label Grid.Row="1" Grid.Column="0">Количество состаяний:</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Padding="1"></TextBox>
                <Label Grid.Row="2" Grid.Column="0">Количество шагов моделирования:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Padding="1" ></TextBox>
            </Grid>
            <StackPanel>
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="2*" Header="1"/>
                        <DataGridTextColumn Width="2*" Header="2"/>
                        <DataGridTextColumn Width="2*" Header="3"/>
                        <DataGridTextColumn Width="2*" Header="4"/>
                        <DataGridTextColumn Width="2*" Header="5"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button HorizontalAlignment="Center" Grid.Row="3" Content="Начать расчет"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
